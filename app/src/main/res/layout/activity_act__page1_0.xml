<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.Act_Page1_0">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingRight="15dp"
        android:background="@color/background_page1_0_title">
        <LinearLayout
            android:id="@+id/btn_page1_0_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:gravity="center">
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/page1_0_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_page1_0_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/page1_0_add"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_page1_0_edit"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@+id/btn_page1_0_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/page1_0_edit"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_page1_0_delete"
            android:layout_marginRight="85dp"
            android:layout_toLeftOf="@+id/btn_page1_0_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/page1_0_delete"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>