<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <TextView
            android:id="@+id/purchase_number"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号:201901010001"/>
        <TextView
            android:id="@+id/purchase_date"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单日期:2019-01-01"/>
        <TextView
            android:layout_below="@id/purchase_number"
            android:id="@+id/purchase_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="采购人:光头强"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/page1_0_add_purchase_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"/>
</LinearLayout>

