<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<include  android:id="@+id/btn_back" layout="@layout/title_one"/>
<LinearLayout
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">
    <TextView
        android:id="@+id/purchase_number"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="订单号:201901010001"
        android:background="@drawable/shape_ret"
        android:gravity="center"/>
    <TextView
        android:id="@+id/purchase_date"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="订单日期:2019-01-01"
        android:background="@drawable/shape_ret"
        android:gravity="center"/>
    <TextView
        android:id="@+id/purchase_user"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="@drawable/shape_ret"
        android:text="采购人:xxx" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/shape_ret"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/purchase_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="名称:"
            android:layout_gravity="center"
            android:gravity="right|center_vertical"/>
        <EditText
            android:id="@+id/purchase_name_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@null"
            android:maxLines="1"/>
    </LinearLayout><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/shape_ret"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/purchase_quity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="数量:"
            android:layout_gravity="center"
            android:gravity="right|center_vertical"/>
        <EditText
            android:id="@+id/purchase_quity_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@null"
            android:maxLines="1"/>
    </LinearLayout><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/shape_ret"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/purchase_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="单价:"
            android:layout_gravity="center"
            android:gravity="right|center_vertical"/>
        <EditText
            android:id="@+id/purchase_price_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@null"
            android:maxLines="1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/purchase_amount"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="总额:"
        android:background="@drawable/shape_ret"
        android:gravity="center"/>
    <Button
        android:id="@+id/purchase_save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="save"/>
</LinearLayout>
</android.support.constraint.ConstraintLayout>