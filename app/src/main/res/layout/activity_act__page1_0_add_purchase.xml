<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <TextView
            android:id="@+id/purchase_number"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号:201901010001"/>
        <TextView
            android:id="@+id/purchase_date"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单日期:2019-01-01"/>
        <TextView
            android:layout_below="@id/purchase_number"
            android:id="@+id/purchase_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="采购人:光头强"/>
    </RelativeLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:text="序号"
                    android:background="@drawable/shape_ret"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:text="名称"
                    android:background="@drawable/shape_ret"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:text="数量"
                    android:background="@drawable/shape_ret"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:text="单价"
                    android:background="@drawable/shape_ret"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:text="总额"
                    android:background="@drawable/shape_ret"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:text="日期"
                    android:background="@drawable/shape_ret"
                    android:gravity="center"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/page1_0_add_purchase_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>

